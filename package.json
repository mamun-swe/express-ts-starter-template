{
  "name": "express-ts-starter-template",
  "version": "1.0.0",
  "description": "A starter application for express & typescript application.",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf build/*",
    "build": "npm run clean && npx tsc",
    "start": "node build/server.js",
    "postinstall": "tsc",
    "watch-node": "nodemon build/server.js",
    "watch-ts": "tsc -w",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q build/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mamun-swe/express-ts-starter-template.git"
  },
  "keywords": [
    "REST",
    "API",
    "Nodejs",
    "Expressjs",
    "MongoDB",
    "express-ts-starter-template"
  ],
  "author": "Abdullah Al Mamun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mamun-swe/express-ts-starter-template/issues"
  },
  "homepage": "https://github.com/mamun-swe/express-ts-starter-template#readme",
  "dependencies": {
    "async-validator": "^4.2.5",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.4",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  }
}
